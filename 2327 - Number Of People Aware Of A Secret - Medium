class Solution:
    def peopleAwareOfSecret(self, n: int, delay: int, forget: int) -> int:
        MOD = 10**9 + 7
        arr = [0]*n
        share = 0
        arr[0] = 1
        for i in range(1, n):
            if i-delay >= 0:
                share += arr[i-delay]
            if i-forget >= 0:
                share -= arr[i-forget]
            share += MOD
            share %= MOD
            arr[i] = share
        return sum(arr[-forget:]) % MOD
