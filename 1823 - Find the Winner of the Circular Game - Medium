class Solution:
    def findTheWinner(self, n: int, k: int) -> int:
        friends = [False]*n

        count = n

        index = 0

        while count > 1:
            for i in range(k):
                while friends[index % n]:
                    index += 1
                index += 1
            
            friends[(index - 1) % n] = True
            count -= 1
        
        index = 0
        while friends[index]:
            index += 1

        return index + 1
